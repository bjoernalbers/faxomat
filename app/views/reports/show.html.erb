<p id="notice"><%= notice %></p>

<h3>Patient</h3>
<p>
<% p = @report.patient %>
<%= "#{p.last_name}, #{p.first_name} (* #{p.date_of_birth.strftime('%d.%m.%Y')})" %>
</p>

<h3>Betreff</h3>
<p>
  <%= @report.subject %>
</p>

<h3>Inhalt</h3>
<p>
  <%= @report.content %>
</p>

<h3>Status</h3>
<p>
  <%= @report.status %>
</p>

<%= link_to 'Druckvorschau', report_path(@report, format: :pdf), class: 'btn btn-default' %>
<%= link_to 'freigeben', approve_report_path(@report), method: :put, class: 'btn btn-primary' if @report.pending? %>

