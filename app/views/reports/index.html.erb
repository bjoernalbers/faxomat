<h1>Arztbriefe</h1>

<ul class="nav nav-tabs">
  <li role="presentation" class=<%= 'active' if params[:pending] != 'false' %>>
    <%= link_to 'Ausstehend', reports_path %>
  </li>
  <li role="presentation" class=<%= 'active' if params[:pending] == 'false' %>>
    <%= link_to 'Vidiert', reports_path(pending: false) %>
  </li>
</ul>

<table>
  <thead>
    <tr>
      <td>Erstellt</td>
      <td>Arztbrief</td>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= l(report.created_at, format: :short) %></td>
        <td><%= link_to report.title, report_path(report) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
