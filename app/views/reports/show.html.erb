<div class="row">
  <% if @report.user == current_user %>
    <% if @report.pending? %>
      <div class="btn-group">
        <%= button_to 'Vidieren', report_path(@report), method: :patch, params: { status: :verified }, class: 'btn btn-primary' %>
        <%= button_to 'LÃ¶schen', report_path(@report), method: :delete, class: 'btn btn-danger', data: { confirm: 'Arztbrief wirklich lÃ¶schen?' } %>
      </div>
    <% elsif @report.verified? %>
      <%= button_to 'Stornieren', report_path(@report), method: :patch, params: { status: :canceled }, class: 'btn btn-danger', data: { confirm: 'Arztbrief wirklich stornieren?' } %>
    <% end %>
  <% end %>

  <%= link_to 'Druckvorschau', report_path(@report, format: :pdf), class: 'btn btn-default' %>

  <% if @report.letter.present? %>
      <%= link_to 'Brief zeigen', letter_path(@report.letter), class: 'btn btn-default'  %>
  <% else %>
    <% if @report.verified? %>
      <%= button_to 'Brief senden', letters_path, method: :post, params: { report_id: @report.id }, class: 'btn btn-default'  %>
    <% end %>
  <% end %>
</div>

<% p = @report.patient %>
<h1>
<%= "#{p.last_name}, #{p.first_name} (* #{p.date_of_birth.strftime('%d.%m.%Y')})" %>
</h1>

<h2>
  <%= @report.subject %>
</h2>

<% %i(anamnesis diagnosis findings evaluation procedure clinic).each do |method| %>
  <% if @report.send(method).present? %>
    <h3>
      <%= @report.class.human_attribute_name(method) %>
    </h3>
    <p>
      <%= @report.send(method) %>
    </p>
  <% end %>
<% end %>

<h3>Status</h3>
<p>
  <%= @report.status %>
</p>

