<!DOCTYPE html>
<html>
<head>
  <title>Faxomat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class='container'>
    <nav class='navbar navbar-default'>
      <div id='navbar' class='navbar-collapse collapse'>
        <% if user_signed_in? %>
          <ul class='nav navbar-nav navbar-left'>
            <li>
              <%= link_to 'Faxe', faxes_path %>
            </li>
            <li>
              <%= link_to 'Arztbriefe', reports_path %>
            </li>
          </ul>

          <ul class='nav navbar-nav navbar-right'>
            <li>
              <%= link_to current_user.username, edit_user_registration_path(current_user) %>
            </li>
            <li>
              <%= link_to 'Abmelden', destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        <% else %>
          <ul class='nav navbar-nav navbar-right'>
            <li>
              <%= link_to 'Anmelden', new_user_session_path %>
            </li>
          </ul>
        <% end %>
      </div>
    </nav>

    <div class="row">
      <div class="col-xs-12">
        <%= bootstrap_flash %>
      </div>
    </div>

    <%= yield %>
  </div>

</body>
</html>
